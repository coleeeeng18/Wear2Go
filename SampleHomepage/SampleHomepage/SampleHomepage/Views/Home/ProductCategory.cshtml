@model IEnumerable<SampleHomepage.Models.product>
@{
    ViewBag.Title = "ProductCategory";
}
@{
    var cartlist = (List<SampleHomepage.Models.Cart>)Session["cart"];
}

<section class="banner bgwhite p-t-40 p-b-40">
    <div class="container">
        <div class="row">

            @foreach (var p in Model)
            {

                <div class="col-sm-10 col-md-8 col-lg-4 m-l-r-auto">
                    <!-- block1 -->
                    <table class="table-bordered">
                        <tr>
                            <td>
                                <a href="@Url.Action("ViewProduct", "Home", new { id = p.ProductID})"><img src="@Url.Action("GetImage", new { id = @p.ProductID})" class="img-responsive" /></a>
                                <br />
                                <h3 class="text-center">@p.ProductName</h3>
                                <h5 class="text-center">@p.ProductPrice php</h5>

                                <!-- Button -->
                                <a href="@Url.Action("Addtocart","ShoppingCart", new { id = p.ProductID})" class="flex-c-m size2 m-text2 bg3 hov1 trans-0-4">
                                    <i class="fa fa-shopping-cart"></i>Add to Cart
                                </a>
                                <a href="@Url.Action("ViewProduct","Home", new { id = p.ProductID})" class="flex-c-m size2 m-text2 bg3 hov1 trans-0-4">
                                    <i class="fa fa-list"></i> More details
                                </a>


                            </td>
                        </tr>
                    </table>
                </div>
            }

        </div>
    </div>
</section>
