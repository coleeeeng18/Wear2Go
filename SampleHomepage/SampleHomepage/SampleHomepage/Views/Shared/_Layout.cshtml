<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="animsition">
    <!-- Header -->
    <header class="header1">
        <!-- Header desktop -->
        <div class="container-menu-header">
            <div class="topbar">
                <div class="topbar-social">
                    <a href="https://www.facebook.com/dosemanilaofficial/" class="topbar-social-item fa fa-facebook"></a>
                    <a href="https://www.instagram.com/dose_manila/" class="topbar-social-item fa fa-instagram"></a>
                </div>

                <span class="topbar-child1">
                    Daily Dose of Fashion and Elegance
                </span>

                <div class="topbar-child2">
                    <span class="topbar-email">
                        doseenterprise@gmail.com
                    </span>

                </div>
            </div>

            <div class="wrap_header">
                <!-- Logo -->
                <a href="index.html" class="logo">
                    <img src="~/Content/Images/logo.jpg" alt="IMG-LOGO">
                </a>

                <!-- Menu -->
                <div class="wrap_menu">
                    <nav class="menu">
                        <ul class="main_menu">
                            <li>
                                <a href="@Url.Action("Index","Home")">Home</a>
                            </li>

                            <li>
                                <a href="@Url.Action("AllProducts","Home")">Shop</a>
                                <ul class="sub_menu">
                                    <li>
                                        <a href="@Url.Action("ProductCategory","Home", new { id = 1})">Women's Collection</a>

                                    </li>
                                    <li>
                                        <a href="@Url.Action("ProductCategory","Home", new { id = 2})">Men's Collection</a>

                                    </li>
                                    <li><a href="@Url.Action("ProductCategory","Home", new { id = 3})">Eyewear</a></li>
                                    <li><a href="@Url.Action("ProductCategory","Home", new { id = 4})">Footwear</a></li>
                                    <li><a href="@Url.Action("ProductCategory","Home", new { id = 1002})">Bags</a></li>
                                </ul>
                            </li>

                            <li>
                                <a href="@Url.Action("About","Home")">About</a>
                            </li>

                            <li>
                                <a href="@Url.Action("Contact","Home")">Contact</a>
                            </li>
                        </ul>
                    </nav>
                </div>

                <div class="wrap_menu">
                    <nav class="menu">
                        <ul class="main_menu">
                            <!--Search-->
                            <li>
                                <div class="col-sm-3 col-md-3 col-lg-3">
                                    <form class="navbar-form" role="search">
                                        <div class="input-group">
                                            <input type="text" class="form-control" placeholder="Search" name="q">
                                            <div class="input-group-btn">
                                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </li>

                            <!-- Header Icon -->
                            <li>
                                <div class="header-wrapicon1">
                                    <a href="@Url.Action("AddToCart","ShoppingCart")">
                                        <img src="~/Content/Images/icons/icon-header-02.png" class="header-icon1" alt="ICON">
                                    </a>

                                </div>
                            </li>
                            <li>
                                <div class="header-wrapicon2">
                                    <a href="@Url.Action("Login","Account")">
                                        <img src="~/Content/Images/icons/icon-header-01.png" class="header-icon1" alt="ICON" />
                                    </a>
                                </div>
                            </li>
                            </ul>
                        </nav>
                </div>
            </div>
            </div>
        

       </header>
   
     @RenderBody()


    <footer class="bg6 p-t-45 p-b-43 p-l-45 p-r-45">
        <div class="flex-w p-b-90">
            <div class="w-size6 p-t-30 p-l-15 p-r-15 respon3">
                <h4 class="s-text12 p-b-30">
                    GET IN TOUCH
                </h4>

                <div>
                    <p class="s-text7 w-size27">
                        Any questions? Let us know in store at Gil Puyat Ave. (Buendia Harrison) Pasay City
                    </p>

                    <div class="flex-m p-t-30">
                        <a href="https://www.facebook.com/dosemanilaofficial/" class="fs-18 color1 p-r-20 fa fa-facebook"></a>
                        <a href="https://www.instagram.com/dose_manila/" class="fs-18 color1 p-r-20 fa fa-instagram"></a>
                    </div>
                </div>
            </div>

            <div class="w-size7 p-t-30 p-l-15 p-r-15 respon4">
                <h4 class="s-text12 p-b-30">
                    Categories
                </h4>

                <ul>
                    <li class="p-b-9">
                        <a href="@Url.Action("ProductCategory","Home", new { id = 1})" class="s-text7">
                            Men
                        </a>
                    </li>

                    <li class="p-b-9">
                        <a href="@Url.Action("ProductCategory","Home", new { id = 2})" class="s-text7">
                            Women
                        </a>
                    </li>

                    <li class="p-b-9">
                        <a href="@Url.Action("ProductCategory","Home", new { id = 3})" class="s-text7">
                            Eyewear
                        </a>
                    </li>

                    <li class="p-b-9">
                        <a href="@Url.Action("ProductCategory","Home", new { id = 4})" class="s-text7">
                            Footwear
                        </a>
                    </li>
                    <li class="p-b-9">
                        <a href="@Url.Action("ProductCategory","Home", new { id = 5})" class="s-text7">
                            Bags
                        </a>
                    </li>
                </ul>
            </div>

            <div class="w-size7 p-t-30 p-l-15 p-r-15 respon4">
                <h4 class="s-text12 p-b-30">
                    Links
                </h4>

                <ul>
                    <li class="p-b-9">
                        <a href="#" class="s-text7">
                            Search
                        </a>
                    </li>

                    <li class="p-b-9">
                        <a href="@Url.Action("About","Home")" class="s-text7">
                            About Us
                        </a>
                    </li>

                    <li class="p-b-9">
                        <a href="@Url.Action("Contact","Home")" class="s-text7">
                            Contact Us
                        </a>
                    </li>

                </ul>
            </div>

            <div class="w-size7 p-t-30 p-l-15 p-r-15 respon4">
             

                <ul>
       

                    <li class="p-b-9">
             
                    </li>

                    <li class="p-b-9">
                     
                    </li>

                    <li class="p-b-9">
               
                    </li>
                </ul>
            </div>

            <div class="w-size8 p-t-30 p-l-15 p-r-15 respon3">
                

                <form>
                    <div class="effect1 w-size9">
                        <a href="@Url.Action("List", "Home")">Admin Page</a>
                        <span class="effect1-line"></span>
                    </div>

                </form>
            </div>
        </div>

        <div class="t-center p-l-15 p-r-15">
            <a href="https://www.paypal.com/ph/home">
                <img class="h-size2" src="~/Content/Images/icons/paypal.png" alt="IMG-PAYPAL">
            </a>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
